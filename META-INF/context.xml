
<Context>
  <Resource name="jdbc/ShoppingDB"
            auth="Container"
            type="javax.sql.DataSource"
            maxTotal="100"
            maxIdle="30"
            maxWaitMillis="10000"
            username="your_user"
            password="your_pass"
            driverClassName="org.postgresql.Driver"
            url="jdbc:postgresql://localhost:5432/shoppingdb"
            factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"/>
</Context>
